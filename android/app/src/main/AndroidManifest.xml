<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
      ## Required Permissions ##
      - INTERNET: This is essential for the Google Mobile Ads SDK to fetch ads.
    -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.example.real_estate_calculator.MainApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="حاسبة العقار">

        <!--
          ## AdMob Application ID ##
          This meta-data tag is required for AdMob to initialize correctly.
          The value below is a TEST ID for development. Remember to replace it
          with your REAL AdMob App ID before publishing your application.
        -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- This meta-data is used by Flutter to handle the theme transition -->
            <!-- from the native splash screen to the Flutter app. -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme"
                />

            <!-- This intent-filter designates this activity as the entry point of -->
            <!-- the app, making it appear on the device's home screen. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Do not delete this. It is used by the Flutter tool to wire up plugins. -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

</manifest>